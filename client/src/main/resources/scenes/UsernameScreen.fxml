<StackPane maxHeight="Infinity" maxWidth="Infinity" prefHeight="838.0" prefWidth="1180.0" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.UsernameScreenCtrl">
   <children>
      <VBox alignment="CENTER" maxWidth="747.0" prefHeight="893.0" prefWidth="747.0" stylesheets="@../css/main.css">
