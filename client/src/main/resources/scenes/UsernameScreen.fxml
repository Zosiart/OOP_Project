            <TextField fx:id="inputUsernameField" onAction="#userInputOnEnter" prefHeight="50.0" prefWidth="355.0" promptText="Input username" styleClass="rounded">
               <font>
                  <Font size="21.0" />
               </font>
               <VBox.margin>
                  <Insets left="150.0" right="150.0" />
               </VBox.margin>
            </TextField>
            <Region maxHeight="61.0" minHeight="20" prefHeight="33.0" prefWidth="747.0" styleClass="margin" VBox.vgrow="ALWAYS" />
